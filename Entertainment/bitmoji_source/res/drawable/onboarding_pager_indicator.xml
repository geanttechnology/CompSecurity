<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="@android:integer/config_shortAnimTime"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="@color/imoji_primary" />
            <size android:height="@dimen/onboarding_indicator_size" android:width="@dimen/onboarding_indicator_size" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="1.0dip" android:color="@color/onboarding_indicator_inactive_colour" />
            <size android:height="@dimen/onboarding_indicator_size" android:width="@dimen/onboarding_indicator_size" />
        </shape>
    </item>
</selector>