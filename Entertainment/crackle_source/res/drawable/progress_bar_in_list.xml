<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#ffe0e0e0" android:endColor="#ffe0e0e0" android:angle="270.0" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient android:startColor="#ff8d8d8d" android:endColor="#ff8d8d8d" android:angle="270.0" android:centerY="0.75" android:centerColor="#ff8d8d8d" />
            </shape>
        </clip>
    </item>
</layer-list>