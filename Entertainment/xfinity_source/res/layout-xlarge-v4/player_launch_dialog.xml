<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/player_launch_bg" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@id/logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/launch_logo" android:layout_above="@id/spinner_container" android:layout_centerHorizontal="true" android:contentDescription="@string/xfinity_speech" />
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@id/spinner_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:id="@id/mature_content_rating" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/H3White" />
        <TextView android:id="@id/mature_content_warning" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mature_content_warning" style="@style/SmallRegularWhite" />
        <ProgressBar android:id="@id/spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="15.0dip" android:indeterminate="true" />
    </LinearLayout>
    <TextView android:id="@id/message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/spinner_container" android:layout_centerHorizontal="true" style="@style/SmallestWhite" />
</RelativeLayout>