    <header android:title="@string/settings_title_cc_options">
        <intent android:targetPackage="@string/package_name" android:action="android.settings.CAPTIONING_SETTINGS" />
    </header>
    <header android:title="@string/settings_help_title" android:fragment="com.xfinity.playerlib.view.settings.PlayNowSettingsFragment">
        <extra android:name="resource" android:value="help_prefs" />
