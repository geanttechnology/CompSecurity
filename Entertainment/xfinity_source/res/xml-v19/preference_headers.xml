<?xml version="1.0" encoding="utf-8"?>
<preference-headers
  xmlns:android="http://schemas.android.com/apk/res/android">
    <header android:title="@string/settings_parental_control_title" android:fragment="com.xfinity.playerlib.view.settings.PlayNowSettingsFragment">
        <extra android:name="resource" android:value="parental_control_prefs" />
    </header>
    <header android:title="@string/settings_use_cellular_title" android:key="@string/settings_key_use_cellular" android:fragment="com.xfinity.playerlib.view.settings.PlayNowSettingsFragment">
        <extra android:name="resource" android:value="use_cellular_prefs" />
    </header>
    <header android:title="@string/settings_manage_devices_title" android:fragment="com.xfinity.playerlib.view.settings.PlayNowSettingsFragment">
        <extra android:name="resource" android:value="manage_devices_prefs" />
    </header>
    <header android:title="@string/settings_title_playback_options" android:fragment="com.xfinity.playerlib.view.settings.PlayNowSettingsFragment">
        <extra android:name="resource" android:value="playback_prefs" />
