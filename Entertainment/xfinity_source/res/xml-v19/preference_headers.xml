    <header android:title="@string/settings_terms_and_policies_title" android:fragment="com.xfinity.playerlib.view.settings.PlayNowSettingsFragment">
        <extra android:name="resource" android:value="terms_and_policies_prefs" />
        <extra android:name="@string/no_visible_footer_extra" android:value="true" />
    </header>
    <header android:title="@string/settings_title_developer_options" android:fragment="com.xfinity.playerlib.view.settings.PlayNowSettingsFragment">
        <extra android:name="resource" android:value="developer_settings_prefs" />
    </header>
    <header android:id="@id/settings_sign_out" android:title="@string/settings_signout_title" android:key="@string/settings_key_signout" />
    <header android:id="@id/settings_about" android:key="@string/settings_key_about" />
