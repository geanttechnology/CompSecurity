        <receiver android:name="com.mixerbox.mixerbox3b.services.PlayerReceiver"/>
        <receiver android:name="com.mixerbox.mixerbox3b.services.SleepReceiver"/>
        <service android:enabled="true" android:name="com.mixerbox.mixerbox3b.services.LocalNotificationService"/>
        <receiver android:name="com.mixerbox.mixerbox3b.services.LocalNotificationReceiver"/>
        <receiver android:name="com.mixerbox.mixerbox3b.services.RemoteControlReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON"/>
            </intent-filter>
        </receiver>
        <receiver android:name="com.mixerbox.mixerbox3b.services.GcmBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>
                <category android:name="com.mixerbox.mixerbox3b"/>
            </intent-filter>
        </receiver>
        <service android:name="com.mixerbox.mixerbox3b.services.GcmIntentService"/>
        <service android:name="com.mixerbox.mixerbox3b.services.MyService"/>
        <receiver android:name="com.mixerbox.mixerbox3b.services.MyReceiver"/>
        <service android:name="com.mixerbox.mixerbox3b.services.WindowPlayerService"/>
        <receiver android:name="com.mixerbox.mixerbox3b.classes.MyAppWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/appwidget_info"/>
        </receiver>
    </application>
