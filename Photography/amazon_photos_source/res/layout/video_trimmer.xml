<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/video_trimmer_layout" android:background="@android:color/black" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/SOFT_KEY_SIDE_OFFSET" layout="@layout/chrome_breadcrumb" />
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <com.amazon.gallery.framework.gallery.video.GalleryVideoView android:id="@id/video_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true" />
        <ImageView android:id="@id/thumbnail" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="fitCenter" android:layout_centerInParent="true" />
        <RelativeLayout android:id="@id/trimmer_container" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ProgressBar android:id="@id/loading" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" style="?android:attr/progressBarStyleLarge" />
            <com.amazon.gallery.thor.widget.RangeSeekBar android:id="@id/seekbar" android:visibility="invisible" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" />
        </RelativeLayout>
        <FrameLayout android:id="@id/trimmer_progress" android:background="@color/dark_gray" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/TRIMMER_PROGRESS_HEIGHT" android:layout_alignParentBottom="true" android:alpha="0.8">
            <TextView android:layout_gravity="center_horizontal" android:paddingTop="@dimen/TRIMMER_PROGRESS_TEXT_PADDING" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/adrive_gallery_trimming_progress" />
            <ProgressBar android:layout_gravity="center" android:paddingTop="@dimen/TRIMMER_PROGRESS_BAR_PADDING" android:layout_width="@dimen/TRIMMER_PROGRESS_BAR_SIZE" android:layout_height="@dimen/TRIMMER_PROGRESS_BAR_SIZE" style="?android:attr/progressBarStyleLarge" />
        </FrameLayout>
        <ImageView android:id="@id/play_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/video_play_button" android:layout_centerInParent="true" android:contentDescription="@string/adrive_gallery_thor_video_play_button" android:alpha="0.5" />
        <ImageView android:id="@id/pause_button" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/wp_pause" android:layout_centerInParent="true" android:contentDescription="@string/adrive_gallery_common_whisperplay_video_pause_button" />
    </RelativeLayout>
</LinearLayout>