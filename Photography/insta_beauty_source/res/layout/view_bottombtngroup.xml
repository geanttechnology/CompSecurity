<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <Button android:layout_gravity="left|center" android:id="@id/btnPostive" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="OK" android:layout_weight="1.0" android:onClick="selectOkPressed" />
    <Button android:layout_gravity="right|center" android:id="@id/btnNegative" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel" android:layout_weight="1.0" android:onClick="selectCancelPressed" />
</LinearLayout>