                </RelativeLayout>
                <TextView android:textSize="@dimen/banner_text_size" android:textColor="@color/text_white" android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@id/btn_edit_align" android:background="@drawable/btn_click_selector" android:paddingTop="@dimen/banner_text_paddingTop" android:layout_width="@dimen/grid_bottomBtn_width" android:layout_height="@dimen/grid_bottomBtn_height" android:scaleType="center" android:text="@string/align_text" android:singleLine="true" android:drawableTop="@drawable/icon_alignleft" android:layout_weight="1.0" />
                <RelativeLayout android:id="@id/btn_color_layout" android:layout_width="@dimen/grid_bottomBtn_width" android:layout_height="@dimen/grid_bottomBtn_height" android:layout_weight="1.0">
                    <TextView android:textSize="@dimen/banner_text_size" android:textColor="@color/text_white" android:gravity="center" android:layout_gravity="center" android:id="@id/btn_edit_color" android:background="@drawable/btn_click_selector" android:paddingTop="@dimen/banner_text_paddingTop" android:layout_width="fill_parent" android:layout_height="@dimen/grid_bottomBtn_height" android:scaleType="center" android:text="@string/color_text" android:drawableTop="@drawable/icon_color" />
                    <ImageView android:gravity="center" android:id="@id/new_color_mark" android:paddingLeft="@dimen/newmark_padding_size" android:paddingTop="@dimen/new_icon_paddingtop" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mark_new3" android:scaleType="center" android:layout_alignParentTop="true" android:layout_centerInParent="true" />
                </RelativeLayout>
                <TextView android:textSize="@dimen/banner_text_size" android:textColor="@color/text_white" android:ellipsize="end" android:gravity="center" android:layout_gravity="center" android:id="@id/btn_edit_bg" android:background="@drawable/btn_click_selector" android:paddingTop="@dimen/banner_text_paddingTop" android:layout_width="@dimen/grid_bottomBtn_width" android:layout_height="@dimen/grid_bottomBtn_height" android:scaleType="center" android:text="@string/background_text" android:singleLine="true" android:drawableTop="@drawable/icon_background" android:layout_weight="1.0" />
                <RelativeLayout android:id="@id/btn_alpha_layout" android:layout_width="@dimen/grid_bottomBtn_width" android:layout_height="@dimen/grid_bottomBtn_height" android:layout_weight="1.0">
                    <TextView android:textSize="@dimen/banner_text_size" android:textColor="@color/text_white" android:gravity="center" android:layout_gravity="center" android:id="@id/btn_text_alpha" android:background="@drawable/btn_click_selector" android:paddingTop="@dimen/banner_text_paddingTop" android:layout_width="fill_parent" android:layout_height="@dimen/grid_bottomBtn_height" android:scaleType="center" android:text="@string/font_watermark" android:drawableTop="@drawable/icon_watermark" />
                    <ImageView android:gravity="center" android:id="@id/new_alpha_mark" android:paddingLeft="@dimen/newmark_padding_size" android:paddingTop="@dimen/new_icon_paddingtop" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mark_new3" android:scaleType="center" android:layout_alignParentTop="true" android:layout_centerInParent="true" />
                </RelativeLayout>
                <TextView android:textSize="@dimen/banner_text_size" android:textColor="@color/text_white" android:gravity="center" android:layout_gravity="center" android:id="@id/btn_text_order" android:background="@drawable/btn_click_selector" android:paddingTop="@dimen/banner_text_paddingTop" android:layout_width="@dimen/grid_bottomBtn_width" android:layout_height="@dimen/grid_bottomBtn_height" android:scaleType="center" android:text="@string/layer_text" android:drawableTop="@drawable/icon_layer" android:layout_weight="1.0" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>