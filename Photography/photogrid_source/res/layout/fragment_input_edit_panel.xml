<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:id="@id/edit_text_panel" android:background="@drawable/bg_blue" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@id/btn_hide" android:background="@drawable/btn_bg_splite_right_blue" android:layout_width="wrap_content" android:layout_height="@dimen/grid_bottomBtn_height" android:src="@drawable/folder_back_selector" />
