            <LinearLayout android:orientation="horizontal" android:id="@id/bottom_panel_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/banner_text_size" android:textColor="@color/text_white" android:gravity="center" android:layout_gravity="center" android:id="@id/btn_edit_text" android:background="@drawable/btn_click_selector" android:paddingTop="@dimen/banner_text_paddingTop" android:layout_width="@dimen/grid_bottomBtn_width" android:layout_height="@dimen/grid_bottomBtn_height" android:scaleType="center" android:text="@string/edit_text" android:drawableTop="@drawable/icon_edit2" android:layout_weight="1.0" />
                <RelativeLayout android:id="@id/btn_font_layout" android:layout_width="fill_parent" android:layout_height="@dimen/grid_bottomBtn_height" android:layout_weight="1.0">
