<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:baselineAligned="false"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:background="@drawable/btn_edit_nosplite" android:layout_width="@dimen/video_popup_bottom_height" android:layout_height="@dimen/video_totaltime_height">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@id/video_time_reset" android:background="@drawable/bg_popup_blue_splite_right" android:layout_width="fill_parent" android:layout_height="fill_parent">
                <TextView android:textSize="@dimen/banner_text_size" android:typeface="sans" android:textColor="@color/text_white" android:gravity="center" android:paddingTop="@dimen/video_music_reselect_padding_top" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="15s" android:drawableTop="@drawable/icon_timeinstagram" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="@drawable/bg_basebar" android:layout_width="fill_parent" android:layout_height="@dimen/video_popup_height_music_time">
                <TextView android:textSize="@dimen/video_totaltime_textsize" android:typeface="sans" android:textColor="@color/text_white" android:paddingTop="@dimen/banner_text_paddingTop" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/video_time_total_time" />
                <TextView android:textSize="@dimen/video_totaltime_textsize" android:typeface="sans" android:textColor="@color/text_white" android:id="@id/video_time" android:paddingLeft="@dimen/video_padding_left" android:paddingTop="@dimen/banner_text_paddingTop" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="15s" />
            </LinearLayout>
            <RelativeLayout android:background="@drawable/bg_basebar" android:layout_width="fill_parent" android:layout_height="@dimen/video_popup_height">
                <TextView android:textSize="@dimen/banner_text_size" android:typeface="sans" android:textColor="@color/text_white" android:gravity="center" android:id="@id/video_time_faster" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/video_margin_left" android:text="@string/video_time_fast" android:drawableTop="@drawable/icon_fast" android:layout_alignParentLeft="true" />
                <SeekBar android:id="@id/video_time_seekbar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/video_margin_top" android:max="100" android:progress="100" android:progressDrawable="@drawable/border_seek_bar" android:thumb="@drawable/btn_seekbar" android:layout_toLeftOf="@id/video_time_slower" android:layout_toRightOf="@id/video_time_faster" style="@style/seekbar_style" />
                <TextView android:textSize="@dimen/banner_text_size" android:typeface="sans" android:textColor="@color/text_white" android:gravity="center" android:id="@id/video_time_slower" android:paddingRight="@dimen/video_margin_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/video_time_slow" android:drawableTop="@drawable/icon_slow" android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>