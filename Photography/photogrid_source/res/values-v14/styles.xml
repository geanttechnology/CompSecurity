<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Widget.WebTextView" />
    <style name="ActionBar.Solid.PhotoGrid" parent="@android:style/TextAppearance.Theme.Dialog.AppError">
        <item name="android:listItemLayout">@drawable/bg_titlebar_light</item>
    </style>
    <style name="ActionBarTabStyle.PhotoGrid" parent="@android:style/Animation.StatusBar">
        <item name="android:background">@drawable/tab_indicator_ab_photogrid</item>
    </style>
    <style name="ActionBarTabTextStylePhotoGrid">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff525252</item>
    </style>
    <style name="actionbar" parent="@android:style/Widget.WebTextView">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.PhotoGrid</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.PhotoGrid</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStylePhotoGrid</item>
        <item name="android:selectionDivider">@drawable/list_divider_holo_light</item>
    </style>
</resources>
