    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <include layout="@layout/cblue_toolbar_with_elevation" />
        <ViewSwitcher android:id="@id/viewswitcher" android:background="@color/dark_gray_solid" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ProgressBar android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" style="?android:attr/progressBarStyleLarge" />
            <GridView android:id="@id/gridview_photos" android:choiceMode="multipleChoice" style="@style/AdderPage.GridView" />
        </ViewSwitcher>
    </LinearLayout>
</android.support.v4.widget.HackyDrawerLayout>