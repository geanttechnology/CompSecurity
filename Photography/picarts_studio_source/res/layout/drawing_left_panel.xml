<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/open_close_button" android:background="@drawable/layers_panel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
        <ImageButton android:id="@id/button_open_panel" android:padding="@dimen/space_4dp" android:visibility="gone" android:layout_height="wrap_content" android:src="@drawable/camera_arrow_closed" style="@style/Widget.Picsart.ImageButton.Action" />
        <ImageButton android:id="@id/button_close_panel" android:padding="@dimen/space_4dp" android:layout_height="wrap_content" android:src="@drawable/camera_arrow_opened" style="@style/Widget.Picsart.ImageButton.Action" />
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/camera_actions" android:background="@drawable/layers_panel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/open_close_button" android:layout_alignParentLeft="true">
        <ImageButton android:id="@id/button_done_camera" android:padding="@dimen/space_4dp" android:src="@drawable/done_camera" style="@style/Widget.Picsart.ImageButton.Action" />
        <ImageButton android:id="@id/button_switch_camera" android:padding="@dimen/space_4dp" android:src="@drawable/front_camera" style="@style/Widget.Picsart.ImageButton.Action" />
        <ImageButton android:id="@id/button_cancel_camera" android:padding="@dimen/space_4dp" android:src="@drawable/cancel_camera" style="@style/Widget.Picsart.ImageButton.Action" />
    </LinearLayout>
</RelativeLayout>