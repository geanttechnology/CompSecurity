<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bc_bottom_bar_tab_seperator" />
        </shape>
    </item>
    <item android:left="1.0px">
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bc_color_main_pressed" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bc_color_main_style" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bc_color_main_style" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bc_color_white" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>