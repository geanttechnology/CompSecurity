<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/bc_color_transparent" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/bc_color_white" />
            <stroke android:width="1.0dip" android:color="@color/bc_color_red" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/bc_color_white" />
            <stroke android:width="1.0dip" android:color="@color/bc_color_main_style" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
</selector>