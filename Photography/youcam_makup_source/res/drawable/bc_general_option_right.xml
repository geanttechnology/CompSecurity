  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bc_color_main_style" />
            <corners android:topRightRadius="5.0dip" android:bottomRightRadius="5.0dip" />
        </shape>
    </item>
    <item android:top="1.0dip" android:right="1.0dip" android:bottom="1.0dip">
        <selector>
            <item android:state_selected="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bc_color_main_style" />
                    <corners android:topRightRadius="5.0dip" android:bottomRightRadius="5.0dip" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bc_color_white" />
                    <corners android:topRightRadius="5.0dip" android:bottomRightRadius="5.0dip" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>