<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bc_color_main_pressed" />
            <stroke android:width="1.0dip" android:color="@color/bc_color_main_style" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/bc_color_white" />
            <stroke android:width="1.0dip" android:color="@color/bc_color_main_style" />
            <corners android:radius="3.0dip" />
        </shape>
    </item>
</selector>