<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="1.0px" android:top="1.0px" android:right="1.0px" android:bottom="1.0px">
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bc_color_main_style_dark_transparent" />
                    <corners android:radius="4.0dip" />
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/bc_color_main_pressed" />
                    <corners android:radius="4.0dip" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bc_color_main_style_dark" />
                    <corners android:radius="4.0dip" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>