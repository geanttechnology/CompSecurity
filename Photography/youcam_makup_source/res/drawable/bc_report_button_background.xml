<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/bc_top_bar_button_disable" />
            <stroke android:width="1.0dip" android:color="@color/bc_top_bar_button_disable" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:state_selected="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/bc_product_button_pressed2" />
            <stroke android:width="1.0dip" android:color="@color/bc_product_button_pressed2" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/bc_product_button_pressed2" />
            <stroke android:width="1.0dip" android:color="@color/bc_product_button_pressed2" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bc_product_button_pressed2" />
            <stroke android:width="1.0dip" android:color="@color/bc_product_button_pressed2" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/bc_color_white" />
            <stroke android:width="1.0px" android:color="@color/bc_register_unfollow_text" />
            <corners android:radius="4.0dip" />
        </shape>
    </item>
</selector>