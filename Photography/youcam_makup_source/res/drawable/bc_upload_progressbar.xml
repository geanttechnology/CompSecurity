<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5.0dip" />
            <gradient android:startColor="@color/bc_progress_background" android:endColor="@color/bc_progress_background" android:angle="270.0" android:centerY="0.5" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5.0dip" />
                <gradient android:startColor="@color/bc_color_main_style" android:endColor="@color/bc_color_main_style" android:angle="90.0" />
            </shape>
        </clip>
    </item>
</layer-list>