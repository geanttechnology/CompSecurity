<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <fragment android:name="com.cyberlink.beautycircle.controller.fragment.TopBarFragment" android:id="@id/fragment_topbar_panel" android:layout_width="fill_parent" style="@style/BcTopBarPanelStyle" />
    <ScrollView android:id="@id/me_plus_about_outter" android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true" android:layout_below="@id/fragment_topbar_panel">
        <LinearLayout android:orientation="vertical" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/BcFullActivityPaddingStyle">
            <RelativeLayout android:id="@id/avatar_panel" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <FrameLayout android:id="@id/thumbnail_panel" android:layout_centerHorizontal="true" style="@style/BcAvertarBigStyle">
                    <com.cyberlink.beautycircle.view.widgetpool.common.UICImageView android:id="@id/edit_avatar" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/bc_avatar_mugshot" android:contentDescription="@string/app_name" app:bc_default_image="@drawable/bc_avatar_mugshot" app:bc_circle_bitmap="true" />
                    <ImageView android:id="@id/me_avatar_changphoto_btn" android:background="@drawable/bc_me_changephoto_circle_ico" android:layout_width="fill_parent" android:layout_height="fill_parent" android:contentDescription="@string/app_name" />
                </FrameLayout>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:id="@id/edit_displayname_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/bc_user_edit_displayname_title" style="@style/BcEditMeTitleTextStyle" />
                <RelativeLayout android:id="@id/edit_displayname_outter" android:layout_width="fill_parent" android:layout_height="fill_parent">
                    <com.rockerhieu.emojicon.EmojiconEditText android:id="@id/edit_displayname_text" android:hint="@string/bc_user_profile_display_name_hint" android:singleLine="true" android:maxLength="50" style="@style/BcEditMeEditTextSpaceStyle" />
                    <ImageView android:id="@id/edit_displayname_clear_button" android:clickable="true" android:src="@drawable/bc_me_clean" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:contentDescription="@string/app_name" style="@style/BcEditMeClearBtnStyle" />
                </RelativeLayout>
                <TextView android:textColor="@color/bc_color_main_edit_text" android:gravity="right" android:id="@id/edit_displayname_text_count" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/BcEditMeCountTextStyle" />
                <TextView android:id="@id/edit_about_text_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bc_user_edit_about_title" style="@style/BcEditMeTitleTextStyle" />
                <com.rockerhieu.emojicon.EmojiconEditText android:gravity="top|left|center" android:id="@id/edit_about_text" android:layout_height="@dimen/t150dp" android:hint="@string/bc_user_edit_about_hint" android:maxLength="255" android:inputType="textAutoCorrect|textMultiLine" style="@style/BcEditMeEditLongTextStyle" />
                <TextView android:textColor="@color/bc_color_main_edit_text" android:gravity="right" android:id="@id/edit_about_text_count" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/BcEditMeCountTextStyle" />
                <TextView android:id="@id/edit_website_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/bc_user_edit_website_title" style="@style/BcEditMeTitleTextStyle" />
                <EditText android:id="@id/edit_website_text" android:visibility="gone" android:hint="@string/bc_user_website_hint" android:singleLine="true" android:maxLength="1024" style="@style/BcEditMeEditTextSpaceStyle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View android:layout_below="@id/fragment_topbar_panel" style="@style/BcTopShadowStyle" />
</RelativeLayout>