<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <fragment android:name="com.cyberlink.beautycircle.controller.fragment.TopBarFragment" android:id="@id/fragment_topbar_panel" android:layout_width="fill_parent" style="@style/BcTopBarPanelStyle" />
    <ScrollView android:id="@id/me_plus_about_outter" android:layout_width="fill_parent" android:layout_height="fill_parent" android:fillViewport="true" android:layout_below="@id/fragment_topbar_panel">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@id/profile_banner_inside" android:background="@color/bc_color_white" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/BcProfileInfoTopPanelStyle">
                <FrameLayout android:id="@id/thumbnail" android:layout_alignParentLeft="true" android:layout_centerVertical="true" style="@style/BcAvertarMediumExStyle">
                    <com.cyberlink.beautycircle.view.widgetpool.common.UICImageView android:id="@id/profile_avatar" android:layout_width="fill_parent" android:layout_height="fill_parent" android:src="@drawable/bc_avatar_mugshot" android:contentDescription="@string/app_name" app:bc_default_image="@drawable/bc_avatar_mugshot" app:bc_circle_bitmap="true" />
                    <ImageView android:id="@id/me_avatar_changphoto_btn" android:background="@drawable/bc_me_changephoto_circle_ico" android:layout_width="fill_parent" android:layout_height="fill_parent" android:contentDescription="@string/app_name" />
