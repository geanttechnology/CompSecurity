<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/bc_color_main_background" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:id="@id/bc_discover_ad_container" android:background="@color/bc_ad_default_background" android:layout_width="fill_parent" style="@style/BcProductListAdPanelStyle">
        <com.cyberlink.beautycircle.view.widgetpool.common.SlideShowView android:id="@id/bc_discover_ad_panel" android:background="@color/bc_ad_default_background" android:layout_width="fill_parent" style="@style/BcProductListAdPanelStyle" />
    </FrameLayout>
    <TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/t6dp">
        <TableRow>
            <LinearLayout android:gravity="center" android:id="@id/lobby_function_looks_salon" style="@style/BcLobbyFunctionOptionStyle">
                <ImageView android:src="@drawable/bc_icon_looks" style="@style/BcLobbyFunctionOptionImageStyle" />
                <TextView android:text="Looks Salon" style="@style/BcLobbyFunctionOptionTextViewStyle" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout android:id="@id/lobby_function_brands" style="@style/BcLobbyFunctionOptionStyle">
                <ImageView android:src="@drawable/bc_icon_brand" style="@style/BcLobbyFunctionOptionImageStyle" />
                <TextView android:text="Brands" style="@style/BcLobbyFunctionOptionTextViewStyle" />
            </LinearLayout>
            <LinearLayout android:id="@id/lobby_function_contests" style="@style/BcLobbyFunctionOptionStyle">
                <ImageView android:src="@drawable/bc_icon_contests" style="@style/BcLobbyFunctionOptionImageStyle" />
                <TextView android:text="Contests" style="@style/BcLobbyFunctionOptionTextViewStyle" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout android:id="@id/lobby_function_beautyist" style="@style/BcLobbyFunctionOptionStyle">
                <ImageView android:src="@drawable/bc_icon_beautyist" style="@style/BcLobbyFunctionOptionImageStyle" />
                <TextView android:text="Beautyists" style="@style/BcLobbyFunctionOptionTextViewStyle" />
            </LinearLayout>
            <LinearLayout android:id="@id/lobby_function_publications" style="@style/BcLobbyFunctionOptionStyle">
                <ImageView android:src="@drawable/bc_icon_editorials" style="@style/BcLobbyFunctionOptionImageStyle" />
                <TextView android:text="Publications" style="@style/BcLobbyFunctionOptionTextViewStyle" />
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout android:id="@id/lobby_function_free_gift" style="@style/BcLobbyFunctionOptionStyle">
                <ImageView android:src="@drawable/bc_icon_gifts" style="@style/BcLobbyFunctionOptionImageStyle" />
                <TextView android:text="Free Gifts" style="@style/BcLobbyFunctionOptionTextViewStyle" />
            </LinearLayout>
            <LinearLayout android:id="@id/lobby_function_beauty_tips" style="@style/BcLobbyFunctionOptionStyle">
                <ImageView android:src="@drawable/bc_icon_tips" style="@style/BcLobbyFunctionOptionImageStyle" />
                <TextView android:text="Contests" style="@style/BcLobbyFunctionOptionTextViewStyle" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <LinearLayout android:orientation="vertical" android:background="@color/bc_color_white" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/t2dp">
        <TextView android:textSize="@dimen/t16dp" android:textColor="@color/bc_color_main_hint_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/t10dp" android:layout_marginTop="@dimen/t8dp" android:text="Trending categories" style="@style/BcDefaultFontStyle" />
        <TableLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/f5dp">
            <TableRow>
                <RelativeLayout style="@style/BcLobbyCategoryOptionStyle">
                    <ImageView android:src="@drawable/_beauty_tips" style="@style/BcLobbyCategoryOptionImageStyle" />
                    <TextView android:text="Makeup" style="@style/BcLobbyCategoryOptionTextViewStyle" />
                </RelativeLayout>
                <RelativeLayout style="@style/BcLobbyCategoryOptionStyle">
                    <ImageView android:src="@drawable/_megan" style="@style/BcLobbyCategoryOptionImageStyle" />
                    <TextView android:text="Contests" style="@style/BcLobbyCategoryOptionTextViewStyle" />
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>