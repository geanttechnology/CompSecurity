<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:background="@drawable/bc_issue_background" android:layout_width="fill_parent" android:layout_height="wrap_content" android:baselineAligned="false"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:id="@id/product_info_bar" android:background="@drawable/bc_bg_post" android:layout_width="fill_parent" android:layout_height="wrap_content" android:baselineAligned="false" style="@style/BcIssuePanelOutsideStyle">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/BcIssuePanelInsideStyle">
            <com.cyberlink.beautycircle.view.widgetpool.common.UICImageView android:id="@id/product_thumb" android:background="@drawable/bc_bg_product_thumb" android:scaleType="fitCenter" style="@style/BcProductThumbnailStyle" />
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:id="@id/product_brand" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/BcProductBrandTextStyle" />
                <TextView android:textColor="@color/bc_color_main_style" android:id="@id/product_category" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/BcProductCategoryTextStyle" />
                <TextView android:textColor="@color/bc_product_list_description_text" android:id="@id/product_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minLines="2" style="@style/BcProductNameTextStyle" />
                <TextView android:ellipsize="end" android:gravity="top" android:id="@id/product_description" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="2" style="@style/BcProductListDescriptionTextStyle" />
                <RelativeLayout android:gravity="left" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/BcProductButtonPanelStyle">
                    <RatingBar android:id="@id/product_rating_star" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/BcProductCommentRatingStyle" />
                    <TextView android:textColor="@color/bc_color_main_style" android:id="@id/product_rating_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@id/product_rating_star" android:layout_alignBottom="@id/product_rating_star" style="@style/BcProductRatingValueStyle" />
                </RelativeLayout>
                <TextView android:id="@id/product_price" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/BcProductListPriceTextStyle" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>