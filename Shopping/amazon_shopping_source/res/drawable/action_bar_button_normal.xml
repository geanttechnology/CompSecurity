<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/action_bar_button_border_color" />
            <corners android:radius="@dimen/action_bar_button_border_corner_radius" />
        </shape>
    </item>
    <item android:left="@dimen/action_bar_button_border_width" android:top="@dimen/action_bar_button_border_width" android:right="@dimen/action_bar_button_border_width" android:bottom="@dimen/action_bar_button_border_width">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/action_bar_button_start_color" android:endColor="@color/action_bar_button_end_color" android:angle="270.0" />
            <corners android:radius="@dimen/action_bar_button_corner_radius" />
            <padding android:left="@dimen/action_bar_button_padding_left_right" android:top="@dimen/action_bar_button_padding_top_bottom" android:right="@dimen/action_bar_button_padding_left_right" android:bottom="@dimen/action_bar_button_padding_top_bottom" />
        </shape>
    </item>
</layer-list>