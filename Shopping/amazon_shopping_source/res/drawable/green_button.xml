<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffa2e501" />
            <stroke android:width="1.0dip" android:color="#ff53933f" />
            <padding android:left="@dimen/button_fullscreen_padding" android:top="@dimen/button_fullscreen_padding" android:right="@dimen/button_fullscreen_padding" android:bottom="@dimen/button_fullscreen_padding" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/button_disabled_color" />
            <padding android:left="@dimen/button_fullscreen_padding" android:top="@dimen/button_fullscreen_padding" android:right="@dimen/button_fullscreen_padding" android:bottom="@dimen/button_fullscreen_padding" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#ff90cc01" android:endColor="#ff6c9901" android:angle="270.0" />
            <padding android:left="@dimen/button_fullscreen_padding" android:top="@dimen/button_fullscreen_padding" android:right="@dimen/button_fullscreen_padding" android:bottom="@dimen/button_fullscreen_padding" />
            <corners android:radius="5.0dip" />
            <stroke android:width="1.0dip" android:color="#ff53933f" />
        </shape>
    </item>
</selector>