<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/primary_background_color" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/screen_padding_h" android:paddingRight="@dimen/screen_padding_h" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <ImageView android:paddingTop="@dimen/screen_padding_v" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/login_apps_logo" />
        <TextView android:textSize="@dimen/login_primary_text_size" android:textColor="@color/primary_text_color" android:id="@id/welcome" android:paddingTop="@dimen/screen_padding_v" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TextView android:textSize="@dimen/login_secondary_text_size" android:textColor="@color/secondary_text_color" android:id="@id/fad" android:paddingTop="@dimen/screen_padding_v" android:paddingBottom="@dimen/screen_padding_v" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <Button android:textSize="@dimen/login_button_text_size" android:textColor="@android:color/black" android:id="@id/signIn_button" android:background="@drawable/button_orange_states" android:paddingTop="@dimen/login_button_padding_v" android:paddingBottom="@dimen/login_button_padding_v" android:layout_width="fill_parent" android:layout_height="wrap_content" />
        <TextView android:textSize="@dimen/login_footer_text_size" android:textColor="@color/secondary_text_color" android:layout_gravity="center_horizontal" android:id="@id/signOut_link" android:paddingTop="@dimen/screen_padding_v" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView android:textSize="@dimen/login_footer_text_size" android:textColor="@color/secondary_text_color" android:id="@id/login_footer_text" android:paddingLeft="@dimen/screen_padding_h" android:paddingRight="@dimen/screen_padding_h" android:paddingBottom="@dimen/screen_padding_h" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" />
    <FrameLayout android:id="@id/progress_container" android:background="#aa000000" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent">
        <com.amazon.venezia.widget.progress.IndeterminateProgressView android:layout_gravity="center" android:id="@id/init_spinner" android:layout_width="@dimen/default_dark_loading_indicator_size" android:layout_height="@dimen/default_dark_loading_indicator_size" />
    </FrameLayout>
</RelativeLayout>