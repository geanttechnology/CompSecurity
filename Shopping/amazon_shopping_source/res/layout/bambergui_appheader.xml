<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/bambergui_appheader" android:background="@color/gateway_background_color" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <LinearLayout android:orientation="horizontal" android:id="@id/bambergui_appheader_upper_block" android:padding="@dimen/detail_header_padding" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="top" android:id="@id/bambergui_appheader_logo" android:layout_width="@dimen/app_icon_width" android:layout_height="@dimen/app_icon_height" />
                <LinearLayout android:orientation="horizontal" android:id="@id/bambergui_appheader_info_block" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <LinearLayout android:layout_gravity="top" android:orientation="vertical" android:id="@id/bambergui_appheader_info_block_details" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/detail_header_block_margin_left" android:layout_marginRight="@dimen/detail_header_block_margin_right" android:layout_weight="1.0">
                        <TextView android:textSize="@dimen/entitlements_primary_text_size" android:textStyle="bold" android:textColor="@color/primary_text_color" android:ellipsize="end" android:id="@id/bambergui_appheader_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" />
                        <TextView android:textSize="@dimen/entitlements_secondary_text_size" android:textColor="@color/secondary_text_color" android:ellipsize="end" android:id="@id/bambergui_appheader_category" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" />
                        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <com.amazon.venezia.widget.stars.StarRatingView android:layout_gravity="center_vertical" android:id="@id/bambergui_appheader_star_rating" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                            <TextView android:textSize="@dimen/detail_header_secondary_text_size" android:textColor="@color/review_count_color" android:layout_gravity="center_vertical" android:id="@id/bambergui_appheader_review_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/detail_header_review_count_margin_left" />
                        </LinearLayout>
                        <TextView android:textSize="@dimen/entitlements_secondary_text_size" android:id="@id/bambergui_appheader_reason" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLength="84" />
                    </LinearLayout>
                    <LinearLayout android:gravity="right" android:layout_gravity="top" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <Button android:textColor="@color/button_enabled_text_color" android:ellipsize="end" android:layout_gravity="right" android:id="@id/bambergui_appheader_action_button" android:background="@drawable/orange_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" />
