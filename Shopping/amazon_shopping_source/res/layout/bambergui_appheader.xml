                            <ProgressBar android:id="@id/bambergui_appheader_progress_wheel" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@android:style/Widget.ProgressBar" />
                        </LinearLayout>
                        <TextView android:textSize="@dimen/detail_header_secondary_text_size" android:textColor="@color/primary_text_color" android:layout_gravity="right" android:id="@id/bambergui_appheader_price" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/detail_header_price_margin_top" />
                        <LinearLayout android:layout_gravity="right" android:orientation="horizontal" android:id="@id/bambergui_appheader_strikethrough_and_reward_block" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TextView android:textSize="@dimen/detail_header_secondary_text_size" android:textColor="@color/secondary_text_color" android:id="@id/bambergui_appheader_strikethrough_price" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                            <TextView android:textSize="@dimen/detail_header_secondary_text_size" android:textColor="@color/link_text_color" android:id="@id/bambergui_appheader_coins_reward" android:paddingLeft="@dimen/detail_header_coins_reward_padding_left" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@id/bambergui_appheader_progress_block" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/detail_header_block_margin_left">
                    <TextView android:textSize="@dimen/entitlements_primary_text_size" android:textStyle="bold" android:textColor="@color/primary_text_color" android:id="@id/bambergui_appheader_progress_title" android:layout_width="fill_parent" android:layout_height="wrap_content" />
                    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="@dimen/pdi_progress_text_size" android:textColor="@color/secondary_text_color" android:id="@id/bambergui_appheader_progress_status" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="1.0" />
                        <TextView android:textSize="@dimen/pdi_progress_text_size" android:textColor="@color/secondary_text_color" android:id="@id/bambergui_appheader_progress_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0.0" />
                        <TextView android:textSize="@dimen/pdi_progress_text_size" android:textColor="@color/secondary_text_color" android:id="@id/bambergui_appheader_progress_percentage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/detail_header_block_margin_left" android:layout_weight="0.0" />
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/detail_header_progress_bar_margin_top">
                        <ProgressBar android:layout_gravity="center_vertical" android:id="@id/bambergui_appheader_progress_bar" android:layout_width="0.0dip" android:layout_height="@dimen/entitlements_progress_bar_height" android:layout_weight="1.0" style="@android:style/Widget.ProgressBar.Horizontal" />
                        <Button android:layout_gravity="center_vertical" android:id="@id/bambergui_appheader_cancel" android:visibility="gone" android:layout_width="@dimen/detail_header_button_width" android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="@dimen/detail_header_coins_balance_text_size" android:textColor="@color/primary_text_color" android:layout_gravity="center" android:id="@id/bambergui_appheader_coins_balance" android:paddingBottom="@dimen/detail_header_coins_balance_padding_bottom" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <View android:background="@color/divider_line_primary_color" android:layout_width="fill_parent" android:layout_height="@dimen/menu_bevel_height" />
        <View android:background="@color/divider_line_secondary_color" android:layout_width="fill_parent" android:layout_height="@dimen/menu_bevel_height" />
    </LinearLayout>
</merge>