        </LinearLayout>
    </LinearLayout>
    <fragment android:name="com.amazon.mas.bamberg.settings.giftcard.GiftCardSettingsFragment" android:id="@id/subscriptions_fragment" android:layout_width="fill_parent" android:layout_height="fill_parent" />
</LinearLayout>