<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_centerInParent="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textSize="@dimen/connectivity_message_text_size" android:id="@id/connectivity_failure_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Could not connect to Amazon." />
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:id="@id/connectivity_refresh_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Retry" android:layout_weight="1.0" style="@style/default_button" />
        <Button android:id="@id/connectivity_cancel_button" android:background="@drawable/button_grey_states" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cancel" android:layout_weight="1.0" style="@style/default_button" />
    </LinearLayout>
</LinearLayout>