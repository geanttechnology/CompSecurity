<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/product_details_price_block" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:shrinkColumns="1">
        <TableRow android:id="@id/product_details_price_block_list_price_row" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:gravity="right" android:id="@id/item_list_price_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
            <TextView android:textColor="@color/dark_text" android:id="@id/item_list_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
        </TableRow>
        <TableRow android:id="@id/product_details_price_block_prepromo_price_row" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:gravity="right" android:id="@id/item_prepromo_price_price_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
            <TextView android:textColor="@color/dark_text" android:id="@id/item_prepromo_price_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
        </TableRow>
        <TableRow android:id="@id/product_details_price_block_price_row" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:gravity="right" android:id="@id/item_price_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
            <TextView android:id="@id/item_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" android:lineSpacingExtra="2.0dip" />
            <TextView android:id="@id/shipping_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
            <com.amazon.mShop.ui.BadgeView android:id="@id/item_badge" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </TableRow>
        <TableRow android:id="@id/product_details_price_block_save_price_row" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:gravity="right" android:id="@id/item_save_price_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
            <TextView android:textColor="@color/dark_text" android:id="@id/item_save_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
        </TableRow>
        <TableRow android:id="@id/product_details_price_block_amazonpoints_row" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:gravity="right" android:id="@id/product_details_price_block_amazonpoints_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
            <TextView android:textColor="@color/dark_text" android:id="@id/product_details_price_block_amazonpoints" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
        </TableRow>
    </TableLayout>
    <ViewStub android:id="@id/dp_show_price_stub" android:layout="@layout/show_price_block" android:inflatedId="@id/dp_show_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/padding" />
    <TextView android:id="@id/full_tax_include_message" android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>