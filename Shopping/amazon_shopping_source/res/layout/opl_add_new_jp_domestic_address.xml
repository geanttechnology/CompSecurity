    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/opl_new_address_jp_line2" />
    <EditText android:id="@id/opl_address_line2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:lines="1" android:scrollHorizontally="true" android:singleLine="true" />
