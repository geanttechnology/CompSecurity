        <View style="@style/Separator" />
        <TextView android:id="@id/opl_payment_method_info_details" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/padding" />
        <TextView android:id="@id/opl_payment_method_info_instructions" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/padding" />
