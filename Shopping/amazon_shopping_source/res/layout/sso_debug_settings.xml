<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <Button android:id="@id/sso_saving_settings_btn" android:layout_margin="@dimen/padding" android:text="@string/debug_save_restart_label" style="@style/Button.Gold.Arrow" />
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/sso_non_auth_force_sign_in" style="@style/Header" />
        <RadioGroup android:id="@id/sso_non_auth_force_sign_in_rgrpbtn" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@id/sso_sign_in_normal_rbtn" />
            <RadioButton android:id="@id/sso_sign_in_force_rbtn" />
            <RadioButton android:id="@id/sso_sign_in_weblab_rbtn" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/account_phone_number_option" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/account_phone_number_option" style="@style/Header" />
        <RadioGroup android:id="@id/account_phone_number_option_rgrpbtn" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@id/account_email_rbtn" />
            <RadioButton android:id="@id/account_email_phone_number_rbtn" />
            <RadioButton android:id="@id/account_weblab_rbtn" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>