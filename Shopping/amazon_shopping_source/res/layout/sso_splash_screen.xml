    <Button android:textSize="@dimen/sso_splash_screen_text_size" android:gravity="center" android:id="@id/sso_use_different_account" android:background="@drawable/btn_gray" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/sso_splash_padding" android:layout_marginRight="@dimen/sso_splash_padding" android:layout_marginBottom="@dimen/sso_splash_vertical_padding" android:text="@string/sso_use_different_account" />
