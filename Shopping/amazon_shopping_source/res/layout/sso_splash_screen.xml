        <TextView android:textColor="@color/link_text_color_selector" android:gravity="right" android:id="@id/sso_conditions_of_use" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/sso_splash_padding" android:text="@string/sso_conditions_of_use" android:layout_weight="1.0" />
