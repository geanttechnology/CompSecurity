    </LinearLayout>
    <TextView android:textColor="@color/link_text_color_selector" android:layout_gravity="center" android:id="@id/sso_cookies_and_internet_advertising" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sso_cookies_and_internet_advertising" android:layout_weight="1.0" />
</LinearLayout>