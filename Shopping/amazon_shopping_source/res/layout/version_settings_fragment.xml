            <TextView android:textSize="@dimen/settings_page_secondary_text_size" android:textColor="@color/secondary_text_color" android:id="@id/release_notes_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/settings_page_field_value_left_margin" />
