<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NotificationBodyText" parent="@android:style/TextAppearance.StatusBar.EventContent">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="NotificationTitleText" parent="@android:style/TextAppearance.StatusBar.EventContent.Title">
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="NotificationMultiLineBodyText" parent="@android:style/TextAppearance.StatusBar.EventContent">
        <item name="android:ellipsize">none</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">false</item>
    </style>
</resources>
