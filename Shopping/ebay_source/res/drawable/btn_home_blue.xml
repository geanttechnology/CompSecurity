<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="false" android:state_enabled="true" android:drawable="@drawable/btn_state_home_blue_normal" />
    <item android:state_window_focused="false" android:state_enabled="false" android:drawable="@drawable/btn_state_home_blue_disabled" />
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="@dimen/homeButtonDropShadowThicknessRight" android:top="@dimen/homeButtonDropShadowThicknessBottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/buttonBgDropShadow" />
                    <corners android:radius="@dimen/homeButtonCornerRadius" />
                </shape>
            </item>
            <item android:right="@dimen/homeButtonDropShadowThicknessRight" android:bottom="@dimen/homeButtonDropShadowThicknessBottom">
                <shape android:shape="rectangle">
                    <solid android:color="#ff75c2ec" />
                    <corners android:radius="@dimen/homeButtonCornerRadius" />
                    <padding android:left="@dimen/buttonPaddingLeft" android:top="@dimen/buttonPaddingTop" android:right="@dimen/buttonPaddingRight" android:bottom="@dimen/buttonPaddingBottom" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" android:state_enabled="true">
        <layer-list>
            <item android:left="@dimen/homeButtonDropShadowThicknessRight" android:top="@dimen/homeButtonDropShadowThicknessBottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/buttonBgDropShadow" />
                    <corners android:radius="@dimen/homeButtonCornerRadius" />
                </shape>
            </item>
            <item android:right="@dimen/homeButtonDropShadowThicknessRight" android:bottom="@dimen/homeButtonDropShadowThicknessBottom">
                <shape android:shape="rectangle">
                    <solid android:color="@color/buttonBgColorHomeScreenBlueNormal" />
                    <corners android:radius="@dimen/homeButtonCornerRadius" />
                    <padding android:left="@dimen/buttonPaddingLeft" android:top="@dimen/buttonPaddingTop" android:right="@dimen/buttonPaddingRight" android:bottom="@dimen/buttonPaddingBottom" />
                    <stroke android:width="3.0dip" android:color="#ff75c2ec" android:dashWidth="0.0dip" android:dashGap="0.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:drawable="@drawable/btn_state_home_blue_normal" />
    <item android:state_focused="true" android:drawable="@drawable/btn_state_home_blue_disabled_focused" />
    <item android:drawable="@drawable/btn_state_home_blue_disabled" />
</selector>