<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_window_focused="false" android:state_enabled="true" android:drawable="@drawable/btn_state_normal" />
    <item android:state_window_focused="false" android:state_enabled="false" android:drawable="@drawable/btn_state_disabled" />
    <item android:state_pressed="true" android:drawable="@drawable/btn_state_pressed" />
    <item android:state_focused="true" android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/style_guide_canvas" />
            <corners android:radius="@dimen/buttonCornerRadius" />
            <padding android:left="@dimen/buttonPaddingLeft" android:top="@dimen/buttonPaddingTop" android:right="@dimen/buttonPaddingRight" android:bottom="@dimen/buttonPaddingBottom" />
            <stroke android:width="3.0dip" android:color="@color/buttonBgColorDisabledFocusedBorder" android:dashWidth="0.0dip" android:dashGap="0.0dip" />
        </shape>
    </item>
    <item android:state_enabled="true" android:drawable="@drawable/btn_state_normal" />
    <item android:state_focused="true" android:drawable="@drawable/btn_state_disabled_focused" />
    <item android:drawable="@drawable/btn_state_disabled" />
</selector>