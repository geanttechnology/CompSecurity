<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/EbayCardStyle"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/native_ad_margin_wide">
        <com.ebay.android.widget.RemoteImageView android:layout_gravity="center_vertical" android:id="@id/ebay_promo_image" android:layout_width="0.0dip" android:layout_height="fill_parent" android:adjustViewBounds="true" android:layout_weight="1.0" app:urlRewriter="zoom_gallery" />
        <RelativeLayout android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/native_ad_margin_xwide" android:layout_weight="1.0">
            <LinearLayout android:orientation="horizontal" android:id="@id/promo_logo_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/native_ad_margin_wide" android:layout_alignParentStart="true">
                <com.ebay.android.widget.RemoteImageView android:id="@id/ebay_promo_logo_image" android:layout_width="@dimen/native_ad_logo_size" android:layout_height="@dimen/native_ad_logo_size" android:contentDescription="@null" />
                <TextView android:layout_gravity="center_vertical" android:id="@id/ebay_promo_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/native_ad_margin_xwide" android:lines="1" android:maxLength="25" style="@style/EbayTextAppearance.Title3" />
            </LinearLayout>
            <TextView android:id="@id/ebay_promo_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:layout_below="@id/promo_logo_layout" style="@style/EbayTextAppearanceStrong.Body2" />
            <TextView android:id="@id/ebay_promo_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="4" android:layout_below="@id/ebay_promo_subtitle" style="@style/EbayTextAppearance.Body1" />
            <Button android:id="@id/learn_more_button" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ebayMargin2x" android:text="@string/learn_more" android:layout_below="@id/ebay_promo_description" android:textAllCaps="false" style="@style/EbayButton" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>