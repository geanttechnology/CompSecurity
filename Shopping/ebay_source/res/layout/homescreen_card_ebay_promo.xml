<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/EbayCardStyle"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/ebayMargin2x" android:layout_marginTop="@dimen/ebayMargin2x" android:layout_marginRight="@dimen/ebayMargin2x">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/ebayMargin2x">
            <com.ebay.android.widget.RemoteImageView android:id="@id/ebay_promo_logo_image" android:layout_width="@dimen/native_ad_logo_size" android:layout_height="@dimen/native_ad_logo_size" android:contentDescription="@null" />
