        </LinearLayout>
        <com.ebay.android.widget.RemoteImageView android:id="@id/ebay_promo_image" android:layout_width="fill_parent" android:layout_height="wrap_content" android:adjustViewBounds="true" app:urlRewriter="zoom_gallery" />
        <TextView android:id="@id/ebay_promo_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ebayMargin2x" android:maxLines="1" style="@style/EbayTextAppearanceStrong.Body2" />
        <TextView android:id="@id/ebay_promo_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="4" style="@style/EbayTextAppearance.Body1" />
        <Button android:id="@id/learn_more_button" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/ebayMargin2x" android:layout_marginBottom="@dimen/ebayMargin2x" android:text="@string/learn_more" android:textAllCaps="false" style="@style/EbayButton" />
    </LinearLayout>
</android.support.v7.widget.CardView>