<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ebay="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:layout_height="fill_parent" style="@style/ItemView">
        <ScrollView android:id="@id/top_layout" android:layout_width="fill_parent" android:layout_height="0.0dip" android:fillViewport="true" android:layout_weight="1.0">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/Letterbox">
                <include layout="@layout/item_header_thumbnail" />
                <TextView android:text="@string/item_view_compatibility_leaf_header" style="@style/ItemView.Header" />
                <TextView android:id="@id/car_name" style="@style/ItemView.Header" />
                <com.ebay.android.widget.ContainerLayout android:id="@id/supplemental_info" android:paddingBottom="@dimen/checkoutTinyMargin" style="@style/ItemView.ContainerLayout" xmlns:ebay="http://schemas.android.com/apk/res-auto" />
            </LinearLayout>
        </ScrollView>
        <FrameLayout android:background="@drawable/sawtooth" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/checkoutMediumMargin" />
        <LinearLayout android:orientation="vertical" android:background="@color/style_guide_black" style="@style/ItemView">
            <Button android:id="@id/done" android:text="@string/item_view_done" style="@style/ItemView" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/common_progress" />
</merge>