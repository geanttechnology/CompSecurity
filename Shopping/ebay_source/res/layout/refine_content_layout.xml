        <include android:id="@id/footer_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" layout="@layout/delete_footer" />
    </RelativeLayout>
    <fragment android:name="com.ebay.mobile.common.SimpleRefineFragment" android:layout_gravity="right" android:id="@id/simple_refine_fragment" android:layout_width="@dimen/simple_refine_fragment_width" android:layout_height="fill_parent" />
</android.support.v4.widget.DrawerLayout>