    <ProgressBar android:layout_gravity="center" android:id="@id/suggestionProgress" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@android:style/Widget.ProgressBar.Small" />
</LinearLayout>