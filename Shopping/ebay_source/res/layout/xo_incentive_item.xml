<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/checkoutListContainerMargin" android:layout_marginBottom="@dimen/checkoutListContainerMargin">
        <CheckBox android:layout_gravity="center_vertical" android:id="@id/xo_cart_incentive_item_checkbox" android:saveEnabled="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/checkoutSmallMargin" android:layout_marginRight="@dimen/checkoutSmallMargin" />
        <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="0.5">
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@id/xo_cart_incentive_item_label_text" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textStyle="bold" android:id="@id/xo_cart_incentive_item_description" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Checkout.Text" />
            </LinearLayout>
            <ImageView android:layout_gravity="center_vertical" android:id="@id/xo_cart_incentive_item_label_bucks" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ebay_bucks" android:contentDescription="@string/xo_cart_ebay_bucks" />
        </RelativeLayout>
        <LinearLayout android:gravity="right" android:layout_gravity="right|center" android:orientation="vertical" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="0.6">
            <LinearLayout android:orientation="horizontal" android:id="@id/xo_cart_incentive_applied_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_gravity="center_vertical" android:id="@id/xo_cart_incentive_label" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/checkoutSmallMargin" android:layout_marginRight="@dimen/checkoutSmallMargin" android:layout_weight="0.6" style="@style/Checkout.Text" />
                <TextView android:textStyle="bold" android:layout_gravity="center_vertical" android:id="@id/xo_cart_incentive_amount" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginRight="@dimen/checkoutListContainerMargin" android:layout_weight="0.4" style="@style/Checkout.Text" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@id/xo_cart_incentive_remaining_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:layout_gravity="right|center" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/checkoutSmallMargin" android:layout_marginRight="@dimen/checkoutSmallMargin" android:text="@string/xo_cart_incentives_remaining_colon" android:layout_weight="0.6" style="@style/Checkout.Text" />
                <TextView android:layout_gravity="center_vertical" android:id="@id/xo_cart_incentive_remaining_amount" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginRight="@dimen/checkoutListContainerMargin" android:layout_weight="0.4" style="@style/Checkout.Text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/ItemViewSeparatorStyle" />
</LinearLayout>