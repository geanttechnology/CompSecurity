                    <TextView android:textAppearance="?android:textAppearanceMedium" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@id/xo_complete_extra_text" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" />
