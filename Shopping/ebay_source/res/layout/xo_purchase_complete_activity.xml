                    <TextView android:textSize="@dimen/ebayTextSizeHuge" android:textColor="@color/style_guide_black" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@id/xo_complete_thank_you_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/prox_complete_callout" />
