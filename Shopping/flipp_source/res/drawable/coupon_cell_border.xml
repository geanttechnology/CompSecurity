                <corners android:radius="2.0dip" />
                <solid android:color="@color/white" />
                <stroke android:width="2.0dip" android:color="@color/couponItemBorderOff" android:dashWidth="6.0dip" android:dashGap="4.0dip" />
            </shape>
        </inset>
    </item>
</selector>