        <inset android:insetLeft="3.0dip" android:insetRight="3.0dip" android:insetTop="3.0dip" android:insetBottom="3.0dip">
            <shape android:shape="rectangle">
                <corners android:radius="2.0dip" />
                <solid android:color="@color/white" />
