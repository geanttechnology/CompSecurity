<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false" android:drawable="@android:color/transparent" />
    <item android:state_pressed="true">
        <inset android:insetLeft="5.0dip" android:insetRight="5.0dip" android:insetTop="5.0dip" android:insetBottom="5.0dip">
            <shape android:shape="rectangle">
                <corners android:radius="2.0dip" />
                <solid android:color="@color/accentColor" />
            </shape>
        </inset>
    </item>
    <item android:state_selected="true">
        <inset android:insetLeft="5.0dip" android:insetRight="5.0dip" android:insetTop="5.0dip" android:insetBottom="5.0dip">
            <shape android:shape="rectangle">
                <corners android:radius="2.0dip" />
                <solid android:color="@color/tintColor" />
            </shape>
        </inset>
    </item>
    <item android:state_activated="true">
        <inset android:insetLeft="5.0dip" android:insetRight="5.0dip" android:insetTop="5.0dip" android:insetBottom="5.0dip">
            <shape android:shape="rectangle">
                <corners android:radius="2.0dip" />
                <solid android:color="@color/tintColor" />
            </shape>
        </inset>
    </item>
    <item android:drawable="@android:color/transparent" />
</selector>