<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/toolbar" />
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/gifting_record_item_height" style="@style/gifting_1510_gift_record_item">
                <TextView android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/to_colon" style="@style/gifting_1510_gift_record_text_title" />
                <EditText android:id="@id/recipient_name" android:layout_width="fill_parent" android:layout_height="fill_parent" android:hint="@string/name" style="@style/gifting_1510_gift_record_single_line_text_value" />
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/gifting_record_item_height" style="@style/gifting_1510_gift_record_item">
                <TextView android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/from_colon" style="@style/gifting_1510_gift_record_text_title" />
                <EditText android:id="@id/from" android:layout_width="fill_parent" android:layout_height="wrap_content" style="@style/gifting_1510_gift_record_single_line_text_value" />
            </LinearLayout>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="@dimen/gifting_record_item_triple_height" style="@style/gifting_1510_gift_record_item">
                <LinearLayout android:paddingTop="@dimen/gifting_message_title_paddingTopBottom" android:paddingBottom="@dimen/gifting_message_title_paddingTopBottom" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/message" style="@style/gifting_1510_gift_record_text_title" />
                    <TextView android:textColor="@color/grey50" android:id="@id/message_count" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/gifting_1510_gift_record_text_value" />
                </LinearLayout>
                <EditText android:gravity="top|left|center" android:id="@id/message1510" android:paddingLeft="0.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/gift_message" android:maxLength="220" style="@style/gifting_1510_gift_record_text_value" />
            </LinearLayout>
            <RelativeLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/gifting_record_item_height" style="@style/gifting_1510_gift_record_item">
                <TextView android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/delivery_method" style="@style/gifting_1510_gift_record_text_title" />
                <RadioGroup android:gravity="center" android:orientation="horizontal" android:paddingLeft="0.0dip" android:layout_width="wrap_content" android:layout_height="@dimen/gifting_email_print_radio_button_height" android:layout_marginTop="@dimen/gifting_icons_padding" android:layout_alignParentRight="true" style="@style/gifting_1510_gift_record_text_value">
                    <RadioButton android:gravity="center" android:id="@id/email" android:layout_width="@dimen/gifting_email_print_radio_button_width" android:layout_height="fill_parent" android:checked="true" android:text="@string/email" style="@style/gifting_1510_email_print_toggle" />
                    <RadioButton android:gravity="center" android:id="@id/print_later" android:layout_width="@dimen/gifting_email_print_radio_button_width" android:layout_height="fill_parent" android:checked="false" android:text="@string/print" style="@style/gifting_1510_email_print_toggle" />
                </RadioGroup>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:id="@id/send_on_layout_frame" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <RelativeLayout android:clickable="true" android:layout_width="fill_parent" android:layout_height="@dimen/gifting_record_item_height" android:onClick="showDatePickerDialog" style="@style/gifting_1510_gift_record_item">
                    <TextView android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/send_gift" style="@style/gifting_1510_gift_record_text_title" />
                    <TextView android:id="@id/send_by_date" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/today" style="@style/gifting_1510_gift_record_text_title_with_right_arrow" />
                </RelativeLayout>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="@dimen/gifting_record_item_height" style="@style/gifting_1510_gift_record_item">
                    <TextView android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/recipient_email_colon" style="@style/gifting_1510_gift_record_text_title" />
                    <EditText android:id="@id/recipient_email" android:layout_width="fill_parent" android:layout_height="fill_parent" android:inputType="textEmailAddress" style="@style/gifting_1510_gift_record_single_line_text_value" />
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="16.0sp" android:textColor="@color/grey_dark" android:gravity="center" android:id="@id/print_later_notice" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="@dimen/gifting_record_item_double_height" android:text="@string/print_later_notice" android:fontFamily="sans-serif-light" style="@style/gifting_1510_gift_record_item" />
            <RelativeLayout android:id="@id/theme_select" android:clickable="true" android:layout_width="fill_parent" android:layout_height="@dimen/gifting_record_item_height" style="@style/gifting_1510_gift_record_item">
                <TextView android:id="@id/choose_card_design" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/choose_card_design" style="@style/gifting_1510_gift_record_text_title" />
                <TextView android:textColor="@color/grey50" android:layout_width="wrap_content" android:layout_height="fill_parent" android:text="@string/optional_with_brackets" android:layout_toRightOf="@id/choose_card_design" style="@style/gifting_1510_gift_record_text_value" />
                <com.groupon.view.UrlImageView android:id="@id/preview_theme_image" android:paddingRight="@dimen/gifting_icons_padding" android:layout_width="@dimen/gifting_theme_preview_image_height_width" android:layout_height="@dimen/gifting_theme_preview_image_height_width" android:layout_toLeftOf="@id/disclosure_indicator" android:layout_centerVertical="true" />
                <ImageView android:id="@id/disclosure_indicator" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/arrow_right_redesign" android:layout_centerVertical="true" style="@style/disclosure_indicator_rtl_compatible" />
            </RelativeLayout>
            <RelativeLayout android:background="@drawable/top_bottom_border_background" android:layout_width="fill_parent" android:layout_height="@dimen/gifting_record_item_height">
                <Button android:id="@id/submit" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="@dimen/gifting_views_margin" android:text="@string/continue_to_confirm_purchase" style="@style/primary_action_button" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>