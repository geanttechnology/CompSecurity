<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#66999999" />
            <corners android:radius="@dimen/apptentive_dialog_button_corner_radius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/apptentive_dialog_button_focused" />
            <corners android:radius="@dimen/apptentive_dialog_button_corner_radius" />
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/apptentive_dialog_button_hovered" />
            <corners android:radius="@dimen/apptentive_dialog_button_corner_radius" />
        </shape>
    </item>
</selector>