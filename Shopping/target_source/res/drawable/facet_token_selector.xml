<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true" android:drawable="@color/target_aluminum_grey" />
            <item android:state_focused="true" android:drawable="@color/target_aluminum_grey" />
            <item android:drawable="@android:color/transparent" />
        </selector>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/default_outline_thickness" android:color="@color/target_aluminum_grey" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>