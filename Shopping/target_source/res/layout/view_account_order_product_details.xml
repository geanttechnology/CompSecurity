<?xml version="1.0" encoding="utf-8"?>
<merge
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <include android:id="@id/account_order_details_product_separator" layout="@layout/view_account_order_details_separator" />
    <RelativeLayout android:id="@id/account_order_product_details" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.target.ui.view.BitmapImageView android:id="@id/account_order_details_product_image" android:layout_width="@dimen/account_order_product_image" android:layout_height="@dimen/account_order_product_image" android:layout_marginLeft="@dimen/account_order_details_default_padding_margin" android:scaleType="centerInside" android:layout_centerVertical="true" android:contentDescription="@string/account_order_details_product_image_content_desc" />
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/account_order_details_left_margin" android:layout_marginRight="@dimen/account_order_details_default_padding_margin">
            <com.target.ui.view.TargetTextView android:id="@id/account_order_details_product_title" android:layout_width="fill_parent" android:layout_height="fill_parent" app:fontStyle="light" style="@style/Target.TextView.ProductTitle" />
            <com.target.ui.view.TargetTextView android:id="@id/account_order_details_product_status" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/account_order_details_less_padding_margin" style="@style/Target.TextView.AccountProductStatus" />
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/account_order_details_less_padding_margin">
                <com.target.ui.view.TargetTextView android:id="@id/account_order_details_product_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" app:fontStyle="medium" style="@style/Target.TextView.AccountProductPrice" />
                <com.target.ui.view.TargetTextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/account_order_details_default_padding_margin" android:text="@string/cart_quantity_multiplier" app:fontStyle="light" style="@style/Target.TextView.AccountProductStatus" />
                <com.target.ui.view.TargetTextView android:id="@id/account_order_details_product_quantity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/account_order_details_default_padding_margin" app:fontStyle="medium" style="@style/Target.TextView.AccountProductPrice" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</merge>