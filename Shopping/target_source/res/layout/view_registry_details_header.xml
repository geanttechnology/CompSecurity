<?xml version="1.0" encoding="utf-8"?>
<merge android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:orientation="vertical" android:background="@color/content_bg" android:padding="@dimen/default_4x_padding_margin" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:gravity="top|center" android:id="@id/registry_details_icon" android:paddingBottom="@dimen/default_4x_padding_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/icon_registry_detail" />
        <com.target.ui.view.TargetTextView android:gravity="top|center" android:id="@id/registry_details_title" android:paddingBottom="@dimen/default_2x_padding_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" app:fontStyle="light" style="@style/Target.TextView.RegistryDetailHeaderTitle" />
        <com.target.ui.view.TargetTextView android:gravity="top|center" android:id="@id/registry_details_date_city_state" android:paddingBottom="@dimen/default_4x_padding_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" app:fontStyle="regular" style="@style/Target.TextView.RegistryCreatedDate" />
        <com.target.ui.view.TargetTextView android:gravity="top|center" android:id="@id/registry_details_no_of_items" android:paddingBottom="@dimen/default_4x_padding_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" app:fontStyle="light" style="@style/Target.TextView.RegistryDetailsNoOfItems" />
        <LinearLayout android:orientation="vertical" android:id="@id/registry_details_barcode_wrapper_layout" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <View android:background="@color/divider_color" android:layout_width="fill_parent" android:layout_height="@dimen/divider_width" />
            <ImageView android:gravity="center" android:id="@id/registry_details_barcode" android:paddingTop="@dimen/default_4x_padding_margin" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            <com.target.ui.view.TargetTextView android:gravity="top|center" android:id="@id/registry_details_registry_id" android:padding="@dimen/no_padding" android:layout_width="fill_parent" android:layout_height="wrap_content" app:fontStyle="regular" style="@style/Target.TextView.RegistryDetailsRegistryId" />
        </LinearLayout>
    </LinearLayout>
</merge>